{
  "name": "test",
  "description": "for test",
  "version": "0.0.1",
  "authors": [
    "Guillermo de la Iglesia <zguillez@gmail.com>"
  ],
  "main": "test-element.html",
  "repository": "",
  "keywords": [
    "polymer",
    "web-components"
  ],
  "scripts": {
    "serve": "lite-server",
    "build": "vulcanize --strip-comments test-element.html > tmp/test-component.html && html-minifier tmp/test-component.html --remove-comments --collapse-whitespace --minify-css --minify-js --output test-component.html",
    "polymer": "vulcanize node_modules/@polymer/polymer/polymer.html > tmp/polymer.html && html-minifier tmp/polymer.html --remove-comments --collapse-whitespace --minify-css --minify-js --output polymer.html",
    "postinstall": "npm run polymer"
  },
  "dependencies": {
    "@polymer/polymer": "latest"
  },
  "devDependencies": {
    "html-minifier": "latest",
    "lite-server": "latest",
    "vulcanize": "latest"
  },
  "license": "MIT"
}
